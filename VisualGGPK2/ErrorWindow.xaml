<Window x:Class="VisualGGPK2.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Language=""
		Title="ErrorWindow" Width="560" Height="500" WindowStartupLocation="CenterScreen" Closing="OnClosing">
    <Grid>
        <TextBox x:Name="ErrorBox" Text="Loading Exception . . ." Padding="2" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,31" ScrollViewer.CanContentScroll="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
		<TextBlock HorizontalAlignment="Right"
				   Text="Copyright © 2020-2023 aianlinb"
				   TextWrapping="Wrap"
				   FontSize="14"
				   VerticalAlignment="Bottom"
				   Margin="0,0,10,7"/>
        <Button x:Name="ButtonCopy" Content="CopyText" IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="70" Margin="10,0,0,6" Click="OnCopyClick"/>
        <Button x:Name="ButtonGitHub" Content="OpenGitHub" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="85" Margin="90,0,0,6" Click="OnGitHubClick"/>
        <Button x:Name="ButtonResume" Content="Resume" IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="60" Margin="190,0,0,6" Click="OnResumeClick"/>
        <Button x:Name="ButtonStop" Content="Stop" IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="40" Margin="260,0,0,6" Click="OnStopClick"/>
    </Grid>
</Window>